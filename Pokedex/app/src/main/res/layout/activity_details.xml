<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lyt_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/pokemon_logo_min" />

            <TextView
                android:id="@+id/txt_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre del pokémon"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="32sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="40sp"/>

            <LinearLayout
                android:id="@+id/lyt_details_types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_types_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipos:"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/txt_types_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipos"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_details_movements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_movements_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movimientos:"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/txt_movements_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Movimientos"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_details_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_stats_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas:"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/txt_stats_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estadísticas"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>